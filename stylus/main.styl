/*colors scheme*/
main-c = #CCC
fade-c = #333
text-c = #FFF
text-c2 = #6D6E70
mc = #1D272A
mc2 = #2E393C
unna = #FFC519
na = #F3740D
un = #A1A4A7


bgpopup = rgba(mc, .8)


body
  font-family PTSansCaption
  font-size: 12px
  color white

*
  user-select none
  -webkit-font-smoothing: antialiased;
  text-rendering: geometricPrecision

.disabled
  display: none !important
#ig
  position: absolute
  left: 0
  top: 0
  color text-c
  .country-list
    position: absolute
    left: 20px
    top: 20px
    width: 300px
    .list
      background-color: mc2
      .line
        padding: 5px 10px
        cursor pointer
        &.unna
          color unna
        &.na
          color na
        &.un
          color un
        &:hover
          background-color: unna
          color text-c
    .text
      width: 100%
      padding: 10px
      height: 31px
      background-color: text-c2
      color white
      border none
      cursor url(../img/search.png), auto
      &:focus
        outline: none !important;
        border:1px solid unna;
        background-color: #ffffff
        color text-c2
  .social-btns
    position absolute
    bottom 20px
    left: 50%
    .wrapper
      left -50%
    .social
      display inline-block
      vertical-align top
      margin-right 20px
      &:last-child
        margin-right 0
  .btn
    cursor pointer
    &.social
      size-btn = 50px
      width: size-btn
      height: size-btn
      &.rounded
        border-radius 5px
  .content
    position absolute
    left: 0
    top: 0
    .about-methods-btn
      offset = 20px
      position: absolute
      right: offset
      top: offset
      s = 30px
      width: s
      height: s
      background-color: #2E393C
      line-height: s
      text-align: center
      font-size 14px
      &:hover
        background-color: unna
        color #2e393c
    .popup
      padding: 5px
      background-color: bgpopup
      position: absolute
      left: 0
      top: 0
    .about-methods
      color white
      cursor pointer
      >*
        position: absolute
      .title
        font-size 16px
        width: 412px
        left: 100px
        top: 100px
      .un-desc
        width: 312px
        left: 953px;
        top: 390px;
      .all-countries-desc
        width: 298px
        left: 340px;
        top: 300px;
      .filter-descs
        left: 557px;
        top: 30px;
        .desc
          width: 143px
          float left
          margin-right: 25px
          &:last-child
            margin-right: 0
    .about-methods
    .problem-popup
      position: absolute
      left: 0
      top: 120px
      background-color: bgpopup
      width: 100%
      height: 610px
    .problem-popup
      .map
        position: absolute
        display: block
        left: 340px;
        top: 40px;
      .about-popup
        width: 300px
        padding: 20px
        position: absolute
        left: 760px;
        top: 20px;
        >.pager
          margin: 20px auto
          .page
            s = 12px
            width: s
            height s
            background-color: #3A4346
            margin-right: s
            display inline-block
            transition all .3s
            &:last-child
              margin-right: 0
            &.selected
            &:hover
              background-color: #FFFFFF
        >.about
          font-family PTSans
        .disabled.pager + .about
          margin-top: 30px
        .info
          font-size 10px
          color white
          text-transform: uppercase
          .percents
            >div
              width: 50%
              display: inline-block
              vertical-align top
              .wrapper
                .val
                .percent-sign
                  display: inline
                  color unna
                  font-weight: bold
                .val
                  font-size: 39px
                  line-height: 29px;
                  font-family RoboBold
                .percent-sign
                  font-size: 20px
                  line-height: 10px;
                .rect
                  width: 50px
                  height: 50px
                  background-color: #3A4346
                  margin-right: 10px
                  display: inline-block
                  .inside-rect
                    position: absolute
                    bottom: 0
                    right: 0
                    width: 10px
                    height: 10px
                    background-color: unna
                >div
                  vertical-align bottom
              .title
                padding-right: 10px
                margin-bottom: 10px
          >.title
            font-size 14px
            margin-bottom: 10px
            font-weight: bold
          .list
            margin-bottom: 30px
            .line
              border-bottom: 1px solid white
              &:last-child
                border none
              >div
                padding-right: 10px
                width: 50%
                line-height: 14px
                display: inline-block
                vertical-align top
    .na-info.btn
      pos = 400px
      position: absolute
      left: pos
      top: pos
      .block
        s = 14px
        width: s
        height: s
        margin-left: -(s/2)
        margin-top: -(s/2)
        background-color: unna
        color mc2
        text-align: center
        line-height: s
        position: absolute
        border-radius: 50%
        font-size: 10px
        font-weight: bold
    .footer
      bottom: 0
      left: 0
      width: 1280px;
      position: absolute
      .ig-logo
        position: absolute
        font-family PTSans
        color #949494
        font-size 10px
        left: 20px
        bottom: 20px
      .lenta-logo
        position: absolute
        right: 20px
        bottom: 15px
        img
          width: 100px;
          bottom: -25px;
    .legend
      position: absolute
      top: 500px;
      left: 20px
      width: 270px
      color #77797F
      .title
        font-size: 20px
        color white
        font-weight: bold
        text-transform: uppercase
        margin-bottom: 10px
      >.desc
        margin-bottom: 10px
      .line
        &:first-child
          margin-left: 0
        >div
          vertical-align: middle
        .rect
          display: inline-block
          width: 5px
          height: 5px
          background-color: red
          &.un
            background-color: un
          &.unna
            background-color: unna
          &.na
            background-color: na
        .desc
          display: inline
    >.map
      width: 100%
      height: 100%
      background-color: #1d272a;
      .filter
        .header
          cursor pointer
          rect
            fill #2E393C
          .border-point
            stroke-width 1.5px
            stroke #898989
            fill none
          text
            fill #E7E7E7
            font-size 10px
            text-transform uppercase
          .inner-circle
            opacity 0
            fill mc2
            transition opacity .3s
          &.selected
            .border-point
              stroke mc2
            text
              fill mc2
            rect
              fill unna
            .inner-circle
              opacity 1
      .filter-point
        cursor pointer
      .approve-line
        stroke-width 1px
        stroke unna
        opacity: .2
      .border-line
        stroke-width 1px
        stroke white
        opacity .05
      #rects
        rect
          cursor pointer
/*browser settings*/
html
  #browsehappy
    display none
  &.desktop-device
    .debug-panel
      display none
  &.no-svg
  &.no-canvas
    #browsehappy
      display block
    #ig
      display none
  &.svg
  &.canvas
    #browsehappy
      display none
    #ig
      display block
